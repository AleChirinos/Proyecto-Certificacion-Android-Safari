<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TuMejorViaje" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/primary_xanadu</item>
        <item name="colorOnPrimary">@color/primary_powderBlue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_material800</item>
        <item name="colorSecondaryVariant">@color/blue_material900</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <item name="background">@color/raisinBlack</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="colorOnSurface">?attr/colorOnPrimary</item>
    </style>


    <style name="MenuTheme" parent="Theme.TuMejorViaje">
        <item name="colorSurface">@color/secondary_silverChalice</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
    </style>
</resources>