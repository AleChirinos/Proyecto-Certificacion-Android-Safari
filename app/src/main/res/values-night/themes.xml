<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TuMejorViaje" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_powderBlue</item>
        <item name="colorPrimaryVariant">@color/primary_morningBlue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_oldLavander</item>
        <item name="colorSecondaryVariant">@color/secondary_rocketMetalic</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="MenuTheme" parent="Theme.TuMejorViaje">
        <item name="colorSurface">@color/secondary_oldLavander</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
    </style>
</resources>