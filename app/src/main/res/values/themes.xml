<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TuMejorViaje" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_powderBlue</item>
        <item name="colorPrimaryVariant">@color/primary_morningBlue</item>
        <item name="colorOnPrimary">@color/teal_700</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_silverChalice</item>
        <item name="colorSecondaryVariant">@color/secondary_alabaster</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="background">@color/middle_mintCream</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="colorOnSurface">@color/blue_material900</item>

    </style>

    <style name="MenuTheme" parent="Theme.TuMejorViaje">
        <item name="colorSurface">@color/primary_morningBlue</item>
        <item name="colorOnSurface">@color/secondary_alabaster</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>

    </style>

</resources>