<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
    android:id="@+id/userImage"
    android:layout_width="75dp"
    android:layout_height="75dp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="32dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:scaleType="centerCrop"
    tools:srcCompat="@tools:sample/backgrounds/scenic"
    />

    <ImageView
        android:id="@+id/chatCommentview"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/userImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/wallper_text"
        />

    <TextView
        android:id="@+id/chatCommentText"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="@id/chatCommentview"
        app:layout_constraintEnd_toEndOf="@id/chatCommentview"
        app:layout_constraintTop_toTopOf="@id/chatCommentview"
        app:layout_constraintBottom_toTopOf="@id/chatCommentTime"
        tools:text="Esto no es chistoso"
        android:textColor="?attr/colorOnPrimary"

        />

    <TextView
        android:id="@+id/chatCommentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/chatCommentview"
        app:layout_constraintTop_toBottomOf="@id/chatCommentText"
        app:layout_constraintBottom_toBottomOf="@id/chatCommentview"
        tools:text="9:30"
        android:textColor="?attr/colorOnPrimary"
        />
</androidx.constraintlayout.widget.ConstraintLayout>