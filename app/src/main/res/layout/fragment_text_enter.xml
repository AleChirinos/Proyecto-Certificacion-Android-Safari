<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/TextEnterButtonView"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wallper_text" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="@id/TextEnterButtonView"
        app:layout_constraintEnd_toStartOf="@id/addResourcesIcon"
        app:layout_constraintStart_toStartOf="@id/TextEnterButtonView"
        app:layout_constraintTop_toTopOf="@id/TextEnterButtonView" />


    <ImageView
        android:id="@+id/addResourcesIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        app:tint="?attr/colorOnPrimary"
        app:srcCompat="@drawable/icons8_add_resources"
        app:layout_constraintEnd_toStartOf="@id/sendIcon"
        app:layout_constraintTop_toTopOf="@id/TextEnterButtonView"
        app:layout_constraintBottom_toBottomOf="@id/TextEnterButtonView"/>

    <ImageView
        android:id="@+id/sendIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/icons8_send"
        app:tint="?attr/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/TextEnterButtonView"
        app:layout_constraintBottom_toBottomOf="@id/TextEnterButtonView"/>


</androidx.constraintlayout.widget.ConstraintLayout>